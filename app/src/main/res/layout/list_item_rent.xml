<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_kos"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/testers"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dip"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat" />

            <Button
                android:id="@+id/btn_bayar"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/primary_background_rounded"
                android:text="Bayar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kos Jalanin ajaKos Jalanin ajaKos Jalanin ajaKos Jalanin ajaKos Jalanin aja"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="28dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl jalan ke masa depan"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tgl_sewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk : 12 Juli 2021"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="94dp" />

            <TextView
                android:id="@+id/total_tagihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.20.000.000"
                android:layout_marginBottom="6dp"
                android:textColor="@color/kos_primary"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="124dp" />

            <TextView
                android:id="@+id/status_bayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_green"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingEnd="24dp"
                android:paddingBottom="4dp"
                android:text="Lunas"
                android:textColor="@color/kos_green"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="162dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>